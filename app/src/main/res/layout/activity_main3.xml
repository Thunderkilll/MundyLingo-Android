<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main3Activity"
    android:id="@+id/drawer"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img4">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="monospace"
            android:onClick="GoToEglishMap"
            android:text="Map English"
            android:textAlignment="center"
            android:textColor="@color/goodred"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/blanc"
        app:itemTextColor="@color/dark_grey"
        app:itemIconTint="@color/dark_grey"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>